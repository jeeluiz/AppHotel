<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage
    x:Class="Hotel_Maui.View.Menu"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Hotel_Maui.View"
    Title="Home"
    BackgroundColor="#ff556b2f">

    <FlyoutPage.Flyout>
        <ContentPage
            Title="Home"
            BackgroundColor="#ff556b2f"
            Visual="Default">
            <StackLayout Spacing="20">
                <Button
                    Clicked="Btn_Home"
                    Text="Home"
                    TextColor="Black" />

                <Button
                    Clicked="Btn_CadastroCliente"
                    Text="Cadastro De Hospede"
                    TextColor="Black" />
                <Button
                    Clicked="Button_Cadastro_Quarto"
                    Text="Cadastro De Hospedagem"
                    TextColor="Black" />




            </StackLayout>
        </ContentPage>
    </FlyoutPage.Flyout>
    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <local:HospedesCadastrados />
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>
</FlyoutPage>
